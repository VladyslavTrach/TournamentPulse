@model TournamentPulse.WebUI.Models.Association.AssociationDetailsListViewModel

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Name</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .container {
            max-width: 800px; /* You can adjust this value to make it wider */
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        h1 {
            text-align: center;
            color: #333;
        }

        p {
            margin-bottom: 10px;
        }

        strong {
            font-weight: bold;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid #ccc;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@Model.Name</h1>

        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Academies Count:</strong> @Model.AcademiesCnt</p>
        <p><strong>Fighters Count:</strong> @Model.FightersCnt</p>

        <h2>Academies:</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Students Count</th>
            </tr>
            @foreach (var academy in Model.Academies)
            {
                <tr>
                    <td><a class="nav-link" href="@Url.Action("Detail", "Academy", new { academyName = academy.Name })">@academy.Name</a></td>
                    <td>@academy.Country</td>
                    <td>@academy.FightersCnt</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
