@using TournamentPulse.WebUI.Models.Tournament;
@model TournamentDetailsViewModel
<!DOCTYPE html>
<html>
<head>
    <title>Centered Card Layout</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="styles.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <!-- Navigation Menu -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light mb-3">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Detail", "Tournament", new { id = ViewData["TournamentId"] })">Detail</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Category", "Tournament", new { id = ViewData["TournamentId"] })">Category</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Bracket", "Tournament", new { id = ViewData["TournamentId"] })">Bracket</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container" id="content-container">
        <div id="tournament-details-page">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-12">
                            <div class="custom-card-main">
                                <div class="row no-gutters">
                                    <div class="col-md-7">
                                        <img src="@Model.ImageName" class="card-img" alt="Image">
                                    </div>
                                    <div class="col-md-5">
                                        <div class="card-body">
                                            <h5 class="card-title">Date of Holding</h5>
                                        <p class="card-text">@Model.Date</p>
                                            <h5 class="card-title">Number of Participants</h5>
                                        <p class="card-text">@Model.MaxParticipants</p>
                                            <a href="#" class="btn btn-primary">Register to Event</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container second-card-container">
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-7">
                            <div class="custom-card-secondary">
                                <div class="row no-gutters">
                                    <div class="col-md-12">
                                        <div class="card-body">
                                        <h4 class="card-title">@Model.Name Description</h4>
                                        <p class="card-text">@Model.Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-5">
                            <div class="custom-card-secondary  mb-3">
                                <div class="row no-gutters">
                                    <div class="col-md-12">
                                        <div class="card-body">
                                            <h4 class="card-title">Location</h4>
                                        <h5 class="card-title">@Model.Country</h5>
                                        <h6 class="card-title">@Model.City</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="custom-card-secondary  mb-3">
                                <div class="row no-gutters">
                                    <div class="col-md-12">
                                        <div class="card-body">
                                            <h4 class="card-title">Price</h4>
                                        <p class="card-text">@Model.Price UAH</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="custom-card-secondary">
                                <div class="row no-gutters">
                                    <div class="col-md-12">
                                        <div class="card-body">
                                            <h4 class="card-title">Contact Organisator</h4>
                                            <h6 class="card-title">Email</h6>
                                        <p class="card-text">@Model.Email</p>
                                            <h6 class="card-title">Phone</h6>
                                        <p class="card-text">@Model.Phone</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>




    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>