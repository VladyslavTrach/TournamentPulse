@model TournamentPulse.Core.Entities.Tournament

<!DOCTYPE html>
<html>
<head>
    <title>Add New Tournament</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body custom-card-add-tournament">
                        <h2 class="card-title">Add New Tournament</h2>

                        @using (Html.BeginForm("Add", "Tournament", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <label for="Name">Tournament Name:</label>
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                                <div class="invalid-feedback">Please enter a tournament name.</div>
                            </div>

                            <div class="form-group">
                                <label for="Description">Description:</label>
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", required = "required" })
                                <div class="invalid-feedback">Please enter a description.</div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="Country">Country:</label>
                                    @Html.TextBoxFor(model => model.Country, new { @class = "form-control", required = "required" })
                                    <div class="invalid-feedback">Please enter a country.</div>
                                </div>

                                <div class="form-group col-md-6">
                                    <label for="City">City:</label>
                                    @Html.TextBoxFor(model => model.City, new { @class = "form-control", required = "required" })
                                    <div class="invalid-feedback">Please enter a city.</div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="Date">Date:</label>
                                    @Html.TextBoxFor(model => model.Date, new { @class = "form-control", type = "date", required = "required" })
                                    <div class="invalid-feedback">Please enter a date.</div>
                                </div>

                                <div class="form-group col-md-6">
                                    <label for="MaxParticipants">Max Participants:</label>
                                    @Html.TextBoxFor(model => model.MaxParticipants, new { @class = "form-control", required = "required" })
                                    <div class="invalid-feedback">Please enter the maximum number of participants.</div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="CreditCard">Credit Card:</label>
                                @Html.TextBoxFor(model => model.CreditCard, new { @class = "form-control" })
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="Email">Email:</label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required", type = "email" })
                                    <div class="invalid-feedback">Please enter a valid email address.</div>
                                </div>

                                <div class="form-group col-md-6">
                                    <label for="Phone">Phone:</label>
                                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="Price">Price:</label>
                                @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                            </div>

                            <button type="submit" class="btn btn-primary">Create</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
